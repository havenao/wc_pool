<div class="container p-3">
  <%= form_with model: @player do |form| %>
    <div class="mb-4">
      <div>
        <%= form.label :name,"Real Name",  class: "form-label" %>
        <%= form.text_field :name, class:"form-control", maxlength: 25 %>
        <% @player.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <br>
      <div>
        <%= form.label :nickname, "Display Name", class: "form-label" %>
        <%= form.text_field :nickname, class:"form-control", maxlength: 12 %>
        <% @player.errors.full_messages_for(:nickname).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    </div>

    <div>
      <%= form.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>