<div class="d-flex flex-row justify-content-between align-items-start">
  <h1>Players</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Rank</th>
      <th scope="col">Points</th>
    </tr>
  </thead>
  <tbody>
    <% rank = 0 %>
    <% @players.each do |player| %>
      <tr>
        <td><strong><%= rank = rank + 1 %>.</strong>   <%= player.display_name%></td>
        <td><%= player.points > 0 ? ApplicationHelper.strip_trailing_zero(player.points.round(2)) : 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>